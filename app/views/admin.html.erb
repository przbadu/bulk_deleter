<!DOCTYPE html>
<html>
  <head>
    <title>Boilerplate</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application' %>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

    <meta name="initial-data" content="<%= {
      user_id: current_user&.id,
      realm_id: current_user&.active_account&.realm_id,
      company_name: current_user&.active_account&.company_name
    }.to_json %>">
  </head>
  <body class='admin'>
    <div id='app'></div>
    
    <%= javascript_pack_tag 'application' %>
  </body>
</html>
